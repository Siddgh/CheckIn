<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thecheckinproject.checkin.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">


        <Button
            android:id="@+id/button_google_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#797A7D"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:elevation="8dp"
            android:paddingRight="16dp"
            android:paddingLeft="8dp"
            android:onClick="GoogleSignIn"
            android:text="@string/common_signin_button_text_long"
            android:background="@drawable/common_google_signin_btn_text_light"
            />


       <com.facebook.login.widget.LoginButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:id="@+id/button_facebook_signin"
            android:textSize="15sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            />



    </LinearLayout>

</FrameLayout>
